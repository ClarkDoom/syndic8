<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<h1>Watchlist</h1>

<ul>
  <% shows.forEach(show => { %>
    <% if (show.showType === "watchlist" && show.profileId === user.profile._id) { %> 
      <h3><a href="/shows/<%= show._id %>"><%= show.name %></a></h3>
      <img width=10%" src="https://www.themoviedb.org/t/p/w300_and_h450_bestv2/<%= show.imageUrl %>" alt="">
      <br>
      <%= show.description %>
      <form action="/shows/<%= show._id %>/update-show-type?_method=PATCH" method="POST">
        <input class="hidden" value="currently-watching" type="text" name="showType">
        <button type="submit">Currently Watching</button>
      </form>
      <form action="/shows/<%= show._id %>?_method=DELETE" method="POST">
        <button>Remove</button>
      </form>
      <br>
      <br>
    <% } %> 
  <% }) %>  
</ul>

<%- include('../partials/footer') %>
