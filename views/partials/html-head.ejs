    <style type="text/css">
      body { 
        font-family: 'Source Serif Pro', serif;
        color: white;
        background: rgb(17, 18, 21) !important; 
        } /* Adding !important forces the browser to overwrite the default style applied by Bootstrap */
        .card-text {
          color: black;
          font-size: small;
        }
        .card-title {
          color: black;
          font-weight: bold;
        }
        a {
          font-weight: bold;
          text-decoration: none;
        }
        #header {
          padding: 20px; 
          font-weight: bold;
        }
        #cards {
          padding: 10px;
        }
        #action-button {
          padding: 10px; 
          margin-bottom: 10px;
          font-weight: bold;
          color: white;
          background-color: rgb(21 , 166, 25);
        }
        #inline-button {
          padding: 5px; 
          margin-bottom: 10px;
          font-weight: bold;
          color: white;
          background-color: rgb(21 , 166, 25);
          border-radius: 10px;
        }
        #edit-profile-button {
          padding: 10px; 
          margin-bottom: 30px;
          font-weight: bold;
          color: white;
          background-color: rgb(21 , 166, 25);
        }
        #comment {
          margin: 10px;
          padding: 10px;
          border: 1px solid lightgray;
          border-radius: 10px;
          box-shadow: 3px 3px 3px lightgrey;
          background-color: rgb(253, 106, 8);
        }
        #comment-input-background {
          background-color: rgb(54, 173, 241);
          color: white;
          text-align: center;
          border-radius: 10px;
          margin: 5px;
        }
    </style>

