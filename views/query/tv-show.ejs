<div class="container">
  <div class="row">
    <div class="col text-center">
      <h1>TV Show Details</h1>
    </div>
  </div>
</div>


<% if (results) { %>

  <%= results.name %>
  <br>
  <img width=10%" src="https://www.themoviedb.org/t/p/w300_and_h450_bestv2/<%= results.poster_path %>" alt="">
  <br>
  <%= results.overview %>
  <br>
  <!-- can replicate action buttons after mvp -->
  <!-- <button>WL</button>
  <button>CW</button>
  <button>SI</button>
  <button>T8</button> -->
  <h3>Average Score: <%= results.vote_average %></h3>

  <% results.seasons.forEach(season => { %>
    <a href="/query/<%= results.id %>/<%= season.season_number %>">
      <%= season.name %>
      <br>
    </a>
  <% }) %> 




<br>


<% } %>

